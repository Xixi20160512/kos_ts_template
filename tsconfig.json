{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "checkJs": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "strictNullChecks": false,
        "allowJs": true,
        "pretty": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2017"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}